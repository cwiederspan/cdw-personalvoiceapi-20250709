  "paths": {
    "/synthesize/file": {
      "get": {
        "tags": [
          "PersonalVoiceApi"
        ],
        "summary": "Synthesize speech from SSML and return a WAV file",
        "operationId": "Synthesize",
        "parameters": [
          {
            "name": "ssml",
            "in": "query",
            "description": "SSML input to be synthesized",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "downloadUrl": {
                      "type": "string",
                      "format": "uri",
                      "description": "The URL to download the synthesized audio file"
                    },
                    "fileType": {
                      "type": "string",
                      "enum": ["audio/wav"],
                      "description": "The type of the file being returned"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request â€” missing or invalid SSML"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": { },
  "tags": [
    {
      "name": "PersonalVoiceApi"
    }
  ]
